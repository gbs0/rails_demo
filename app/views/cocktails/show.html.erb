<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-success", id:"back_ui"%>
    </div>
  </div>
  <div class="col">
    <div class="col-sm-12 col-md-6" id="card-base">
      <h3>Recipe</h3>
      <table class="table table-hover">
        <tbody>
          <thead>
            <th scope="col">Ingredient</th>
            <th scope="col">Description</th>
            <th scope="col">Nacionality</th>
            <th scope="col">Handle</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td scope="row"><%= dose.ingredient.name %></td>
              <td scope="row"><%= dose.description %></td>
              <td scope="row"><%= dose.nacionality  %></td>
              <td scope="row">
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <div class="col-sm-12 col-md-6">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>	
</div>
